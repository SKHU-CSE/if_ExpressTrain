<html lang="en">
<body>
<link rel="stylesheet" type="text/css" href="assets/home.css">

<div class="container3">
    <seticon>
        <div id="s2">
            
            <form action="/finder" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                
                <div class="control-group">
                    <h3>카테고리</h3>
                    <label class="control control--checkbox"> 한식
                      <input type="checkbox" name="category[]" value="1"/>
                      <div class="control__indicator"></div>    
                    </label>
                    <label class="control control--checkbox"> 중식
                      <input type="checkbox" name="category[]" value="2"/>
                      <div class="control__indicator"></div>
                    </label>
                    <label class="control control--checkbox"> 분식
                    <input type="checkbox" name="category[]" value="3"/>
                      <div class="control__indicator"></div>                                                                                                                                                                                                            
                    </label>
                     <label class="control control--checkbox"> 제과점
                      <input type="checkbox" name="category[]" value="4"/>
                      <div class="control__indicator"></div>
                    </label>
                     <label class="control control--checkbox"> 패스트푸드
                      <input type="checkbox" name="category[]" value="5"/>
                      <div class="control__indicator"></div>
                    </label>
                     <label class="control control--checkbox"> 부식
                      <input type="checkbox" name="category[]" value="6"/>
                      <div class="control__indicator"></div>
                    </label>
                </div>
                  
                <div class="control-group">
                    <h3>카드종류</h3>
                    <label class="control control--checkbox"> 꿈나무카드
                      <input type="checkbox"/>
                      <div class="control__indicator"></div>
                    </label>
                </div>
            
                <div class="control-group">
                    <h3>위치</h3>
                    <label class="control control--checkbox"> 서울
                      <input type="checkbox"/>
                          <div class="control__indicator"></div>
                    </label>
                    <div class="list_bt1">
                        <button type="submit" class="btn btn-outline-fill">찾기</button>
                    </div>
                </div>
            
            </form>
            </div>
        </div>
        
        <div class="container4">
            <!---------------list card----------------->
            <div class="list_grid">
                <% @stores.each do |s| %>
                 <div class="card bg-light mb-3" style="max-width: 18rem;">
                  <div class="card-body">
                      <div class="list_img"><a href="#" title="눌러보세요" data-toggle="modal" data-target="#ListModal"> 
                          <img src="<%=s.photo%>" width="200px" height="150px"></a>
                      </div> 
                        <h5 class="card-title"><%= s.store_name %></h5>
                        <p class="card-text"><%= Category.find(s.category_id).category_name %></p>
                        <p class="card-text"><%= s.address %></p>
                  </div>
                 </div>
                <% end %>
            </div>
             <div class="list_bt2"><a class="btn btn-outline-fill" href="/map">지도 보기</a></div>
        </div>
    </seticon>
</div>

<!---------list modal------------->
<div class="modal fade" id="ListModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body"> 
            <div class="list_modal_img">
                <img src="assets/main.png" width="300px" height="200px">
            </div>
            <div class="card"> 
              <div class="card-body">
                This is some text within a card body.
              </div>
            </div>
        </div>
      </div>
    </div>
</div>
 
</body>       
</html>