<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_profile_name"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="임수현"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_profile_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="2018.11.10"
        android:layout_alignTop="@id/content_profile_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_profile_name"
        android:text="test"
        android:id="@+id/content_profile_content"
        android:layout_marginRight="10dp"
        android:maxHeight="100dp"
        android:layout_alignLeft="@id/content_profile_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:layout_marginBottom="14dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_below="@id/content_profile_content"></View>

</RelativeLayout>
</android.support.v7.widget.CardView>
